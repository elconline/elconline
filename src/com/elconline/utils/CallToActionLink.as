package com.elconline.utils {		import gs.easing.Cubic;		import gs.TweenLite;			import flash.events.MouseEvent;		import flash.display.Sprite;		/**	 * @author nmouzannar	 */	public class CallToActionLink extends Sprite {				private var _coremetricsMethod: String;		private var _coremetricsCatId: String;		private var _coremetricsElementId: String;		private var _color: int;		private var _rollOverColor: int;		private var _pageUrl: String;				public function CallToActionLink(coremetricsMethod:String='',coremetricsCatId:String= '', coremetricsElementId:String='',color:int=0,rollOverColor:int=0,value:String='') {				this.buttonMode = true;			this.useHandCursor = true;			this.mouseChildren = false;						_coremetricsMethod = coremetricsMethod;			_coremetricsCatId = coremetricsCatId;			_coremetricsElementId = coremetricsElementId;				_color = color;			_rollOverColor = rollOverColor;			_pageUrl = value;										this.addEventListener(MouseEvent.ROLL_OVER,onRollOver,false,0,true);			this.addEventListener(MouseEvent.ROLL_OUT,onRollOut,false,0,true);		}		// ------------------------------------		// ACCESSORS		// ------------------------------------		public function get coremetricsMethod() : String {return _coremetricsMethod;}		public function set coremetricsMethod(coremetricsMethod : String) : void {_coremetricsMethod = coremetricsMethod;}			public function get coremetricsCatId() : String {return _coremetricsCatId;}		public function set coremetricsCatId(coremetricsCatId : String) : void {_coremetricsCatId = coremetricsCatId;}				public function get coremetricsElementId() : String {return _coremetricsElementId;}		public function set coremetricsElementId(coremetricsElementId : String) : void {_coremetricsElementId = coremetricsElementId;}				public function get pageUrl() : String {return _pageUrl;}		public function set pageUrl(pageUrl : String) : void {_pageUrl = pageUrl;}				// ------------------------------------		// METHODS		// ------------------------------------							public function addLine(posX:Number,posY:Number, lineWidth:Number) : void {				var hyperLinkLine:Sprite = Draw.createHorizontalLine(2,_color,1,lineWidth);			hyperLinkLine.x = posX;			hyperLinkLine.y = posY;			addChild(hyperLinkLine);		}				private function onRollOver(event:MouseEvent):void {			TweenLite.to( event.target, .5, {tint:_rollOverColor , ease:Cubic.easeOut } );		}						private function onRollOut(event:MouseEvent):void {			TweenLite.to( event.target, .5, { tint:_color,  ease:Cubic.easeOut });		}	}}